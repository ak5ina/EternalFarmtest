<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="200"
                >
                <ImageView
                    android:id="@+id/image_adapt_ingredient_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/icon_ingredient"
                    >
                </ImageView>

                <TextView
                    android:id="@+id/text_adapt_ingredient_name"
                    android:layout_width="wrap_content"
                    android:text="Ingredient"
                    android:minWidth="50dp"
                    android:maxWidth="200dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    >
                </TextView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="left"
                >
                <TextView
                    android:id="@+id/text_adapt_ingredient_amount"
                    android:layout_width="wrap_content"
                    android:text="Amount"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:layout_gravity="right"
                    >
                </TextView>

                <TextView
                    android:id="@+id/text_adapt_ingredient_unit"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Unit"
                    android:gravity="center"
                    android:minWidth="70dp"
                    android:entries="@array/unit_array"
                    >
                </TextView>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>