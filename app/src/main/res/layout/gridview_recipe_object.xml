<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gridview_wholeobject"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="160dp"
    android:layout_height="180dp"

    android:background="@color/cardview_shadow_start_color"
    android:clickable="true">




        <ImageView
            android:id="@+id/gridview_pic_recipy"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/ic_launcher_background"
            android:layout_gravity="center"
            tools:ignore="MissingConstraints" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color_bg_for_text"

        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/gridview_name_recipy"
        app:layout_constraintEnd_toEndOf="@+id/gridview_pic_recipy">

        <TextView
            android:textColor="@color/cardview_light_background"
            android:id="@+id/gridview_time_recipy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="time (30)"
            android:textSize="12dp" />

        <TextView
            android:textColor="@color/cardview_light_background"
            android:id="@+id/gridview_price_recipy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="price (High)"
            android:textSize="12dp" />

        <TextView
            android:textColor="@color/cardview_light_background"
            android:id="@+id/gridview_rating_recipy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rating (4.6)"
            android:textSize="12dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/gridview_name_recipy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_shadow_start_color"
        android:gravity="center"
        android:text="name"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>